<% if (page.total > 1) { %>
    <div class="pagination">
        <% if (page.prev) { %>
            <a href="<%- url_for_lang(page.prev_link) %>"><i class="fa fa-angle-left"></i></a>
        <% } %>
        <span class="page-number"><%= 'Page ' + page.current + ' of ' + page.total %></span>
        <% if (page.next) { %>
            <a href="<%- url_for_lang(page.next_link) %>"><i class="fa fa-angle-right"></i>
            </a>
        <% } %>
    </div>
<% } %>
